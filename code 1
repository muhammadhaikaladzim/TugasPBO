    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
          float luas;
          
          float alas=Float.parseFloat(jalas.getText());
          float tinggi=Float.parseFloat(jtinggi.getText());
          luas = (alas/2)*tinggi;
          jluas.setText(""+luas);
// TODO add your handling code here:
    }                                        

