    private void btnKonversiActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:

        rupiah = Float.parseFloat(txtRupiah.getText());
        dolar = (float) (rupiah * 0.00008);
        euro = (float) (rupiah * 0.00007);
        pound = (float) (rupiah * 0.00005);
        yen = (float) (rupiah * 0.00876);
        ringgit = (float) (rupiah * 0.00032);
        txtDolar.setText("" + dolar);
        txtEuro.setText("" + euro);
        txtPound.setText("" + pound);
        txtYen.setText("" + yen);
        txtRinggit.setText("" + ringgit);
           
    }                                           

